<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:orientation="vertical"
    android:background="@mipmap/main_bg"
              android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#00000000"
        >
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="#00000000"
            android:src="@android:drawable/ic_media_rew"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            android:id="@+id/id_btn_add_back"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textSize="25dp"
            android:textColor="#ffff"
            android:layout_centerInParent="true"
            android:layout_centerHorizontal="true"/>


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00000000"
        android:layout_weight="1"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="23dp"
            android:id="@+id/id_viewTime"
            android:textColor="#ffff"
            android:background="#2de3e6f2"
            android:text="xxxx年月日"/>

        <com.example.notepad.tools.SpanText
            android:id="@+id/id_editContent"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00000000"
            android:gravity="top"
            android:paddingLeft="15dp"
            android:paddingRight="15dp"
            android:text="      "
            android:textColor="#1e1a1a"/>
    </LinearLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/line"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="#00000000"
        >

        <ImageButton
            android:id="@+id/id_btn_start_camera"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/id_btn_save"
            android:layout_marginEnd="45dp"
            android:layout_marginRight="45dp"
            android:background="#00000000"
            android:src="@android:drawable/ic_menu_camera"/>
        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:layout_gravity="center"
            android:layout_centerInParent="true"
            android:src="@android:drawable/ic_menu_save"
            android:id="@+id/id_btn_save"
            android:layout_centerHorizontal="true"/>

        <ImageButton
            android:id="@+id/id_btn_usingpic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="45dp"
            android:layout_marginStart="45dp"
            android:background="#00000000"
            android:src="@android:drawable/ic_menu_gallery"/>

    </RelativeLayout>
</LinearLayout>
